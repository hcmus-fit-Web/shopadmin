<h3>
    {{viewTitle}}
</h3>
    <form action="/" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{task._id}}">
        <div class="form-group">
            <label>Task Name</label>
            <input type="text" class="form-control" name="task" value="{{task.task}}" placeholder="Task Name">

        </div>
        <div class="form-group">
            <label>Description</label>
            <input type="text" class="form-control" name="description" value="{{task.description}}" placeholder="Description Name">
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                Submit

            </button>
            <a href="/list" class="btn btn-success">
                View All
            </a>
        </div>


    </form>